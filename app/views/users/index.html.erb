<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <% if current_user != user %>
            <% if user.invites.first.nil? %>
              
              <% if current_user.invites.find_by(user_id: user).present? %>
                  <% if current_user.invites.find_by(user_id: user).status==0 %>

                    <%= form_for :friendship, :url=> {:controller => 'friendships', :action => @friendship } do |f| %>
                      <%= f.hidden_field :status , :value => 1 %>
                      <br/>
                      <%= f.submit 'Accept Invitation' %>
                    <% end %> 
                  <% else %>
                      <p>Your are friends</p>
                  <% end %>    
                
              <% end %>
              
            <% else %>  
              <% if user.invites.first.status == 0 %>
                  <p>Pending invitation</p>
              <% elsif user.invites.first.status == 1 %>
                  <p>Your are friends</p>
              <% else %>
                <p><%= link_to 'Invite to friendship', addfriend_path(user_id: current_user, friend_id: user.id, status: 0), method: :put, data: { confirm: "Do you want to add #{user.name} as friend?" } %></p>
              <% end %>
            <% end %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
