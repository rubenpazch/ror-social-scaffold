<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <% if current_user != user %>
            <%= link_to 'Invite to friendship', addfriend_path(user_id: current_user, friend_id: user.id, status: 0), method: :put, data: { confirm: "Do you want to add #{user.name} as friend?" } %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
